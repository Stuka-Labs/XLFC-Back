rules_version = '2';

service cloud.firestore {

  match /databases/{database}/documents {

    function isSuperAdmin() {
      return isAuthenticated() && 'superadmin' in request.auth.token &&
        request.auth.token.superadmin == true
    }

    function isAdmin() {
      return isAuthenticated() && 'admin' in request.auth.token &&
        request.auth.token.admin == true
    }

    function isCoach() {
      return isAuthenticated() && 'coach' in request.auth.token &&
        request.auth.token.coach == true
    }

    function isAuthenticated() {
      return request.auth.uid != null
    }

    function isNonEmptyString(fieldName) {
      return request.resource.data[fieldName] is string &&
      request.resource.data[fieldName].size() > 0;
    }

    match /{document=**} {
      allow read: if isAuthenticated();
    }
  }
}